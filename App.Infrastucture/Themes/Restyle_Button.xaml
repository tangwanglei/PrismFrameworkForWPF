<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:App.Infrastucture.Theme">
    <Style x:Key="CreateButton" TargetType="Button">
        <Setter Property="Background" Value="Green"/>
        <Setter Property="Visibility" Value="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type ContentControl},AncestorLevel=2},Path=DataContext.ViewVisibility}"/>
    </Style>
</ResourceDictionary>